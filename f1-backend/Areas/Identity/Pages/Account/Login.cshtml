@page
@model LoginModel

@{
    ViewData["Title"] = "Inloggning";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">E-post</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Lösenord</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Logga in</button>
                </div>

                <div style="margin-top: 3em; padding: 2em 1em 1em 1em; border: 1px solid #ccc; border-radius: 4px;">
                    <div>
                        <p>
                            <a class="btn btn-warning" id="forgot-password" asp-page="./ForgotPassword">Glömt ditt lösenord?</a>
                        </p>
                        <p>
                            <a class="btn btn-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Skapa ett nytt konto</a>
                        </p>
                    </div>
                </div>                
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
